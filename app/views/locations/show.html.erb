<div id="post_content">
	<br>
	  <div class="row" >
	    
	    <div class="col-xs-12 col-md-6">
	        <div id="post_info">
	        		<h3>Information :</h3>
	        		<p>
					  <strong>Nom:</strong>
					  <%= @location.name %>
					</p>

	              	<p>
					  <strong>Address:</strong>
					  <%= @location.address %>
					</p>

					<p>
					  <strong>Latitude:</strong>
					  <%= @location.latitude %>
					</p>

					<p>
					  <strong>Longitude:</strong>
					  <%= @location.longitude %>
					</p>

					<p>
					  <strong>Téléphone:</strong>
					  <%= @location.phone %>
					</p>		
	        </div>
	    </div>

	    <div class="col-xs-12 col-md-6">
	    	<div id="post_info">
				<div class="google-maps">
				    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=700x550&sensor=false&zoom=15&markers=#{@location.latitude}%2C#{@location.longitude}" %>
				</div>	
			</div>
	  	</div>
	</div>


	<div class="row" ><br><br><br>
		<div class="col-xs-12 col-md-6">
			<%= link_to 'Edit', edit_location_path(@location), class: "button"  %>
			<%= link_to 'Retour', locations_path, class: "button" %>
		</div>
	</div>