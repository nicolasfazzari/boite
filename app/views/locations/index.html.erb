<div id="post_content">
  
    <br>
    <h1>Liste des boulangeries</h1>
   


    <div class="row">
      <div class="col-md-6">
        <div  class="post_wrapper">
          <h3>Recherche par rayon :</h3>
             <div class="form-group">
                  <%= label :lieu, "Lieu :" %>
                  <%= text_field_tag :search, params[:search], class: "form-control" %><br>
                  <%= label_tag :distance, "Rayon :"  %>
                  <%= text_field_tag :distance, params[:distance], class: "form-control" %>
              </div>
          </div>
          <div  class="post_wrapper">
          <h3>Filtre :</h3>
          <%= search_form_for @search do |f| %>
            <div class="form-group">
              <%= f.condition_fields do |c| %>
                <%= render "condition_fields", f: c %>
              <% end %>
              <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
            </div>
            <div class="field">
              Sort:
              <%= f.sort_fields do |s| %>
                <%= s.sort_select %>
              <% end %>
            </div><br>
          <%= f.submit "Rechercher"%>
      <% end %>   
      </div> 
      </div> 
    
         
  
          <div class="col-md-12">
            <div  class="post_wrapper">
              <table class="table table-striped">
                <table class="table">
                  <thead>
                    <tr>
                      <th><%= sort_link @search, :address, "Adress" %></th>
                      <th><%= sort_link @search, :zip, "Code postal" %></th>
                      <th><%= sort_link @search, :city, "Ville" %></th>
                      <th><%= sort_link @search, :latitude, "Latitude" %></th>
                      <th><%= sort_link @search, :longitude, "Longitude" %></th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @locations.each do |location| %>
                      <tr>
                        <td><%= location.address %></td>
                        <td><%= location.zip %></td>
                        <td><%= location.city %></td>
                        <td><%= location.latitude %></td>
                        <td><%= location.longitude %></td>
                        <td width="20px"><%= link_to 'Show', location, class: 'btn btn-primary' %></td>
                        <td width="20px"><%= link_to 'Edit', edit_location_path(location), class: 'btn btn-default' %></td>
                        <td width="20px"><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
</div>